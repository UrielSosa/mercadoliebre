<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {'title': 'Home'})  %>
<body>
	<!-- Header -->
	<%- include('partials/header')  %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	<!-- ultima visita -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Basado en tu Ãºltima visita</h2>
			</div>
			<!-- Show the "visited" products -->

			<% products.forEach(product => { %>
				
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<div>
							<a href="/products/<%= product.id %>">
							<figure class="product-box_image">
								<img src="/images/products/<%= product.image %>" alt="imagen de producto">
							</figure>
							</a>
							<article class="product-box_data">
								<h2><%= product.price %></h2>
								<span><%= product.discount %> % OFF</span>
								<p><%= product.name %></p>
								<button value="<%= product.id %>" class="add-to-cart">cart</button>
								<i class="fas fa-truck"></i>
							</article>
						</div>
					</section>
				</div>

			<% }) %>
					
		</div>
	</div>
	<!-- /ultima visita -->

	<!-- Ofertas -->
	<!-- <div class="container products-wrapper"> -->
		<!-- <div class="row"> -->
			<!-- <div class="col-12">
				<h2 class="products-title">Ofertas</h2>
			</div> -->
			<!-- Show the "in-sale" products -->

			<%# insale.forEach(product => { %>
				<%#- include('products/product', { product: product }) %>
			<%# }) %>

		<!-- </div> -->
	<!-- </div> -->
	<!-- /Ofertas -->

	<!-- footer -->
	<%- include('partials/footer')  %>
	
	<!-- /footer -->
	<script src="/js/cart.js"></script>
</body>	
</html>